.registration__form
  width 450px
  overflow hidden
  background-color white
  padding 0 50px
  display flex
  flex-direction column
  justify-content center

.form
  &__title
    color #192535
    font-size 28px
    text-align center
  &__link
    color #192535
    margin-top 20px
    text-align end
    font-size 14px
    text-decoration none
    &:hover
      text-decoration underline

