.form__group
  display flex
  flex-direction column-reverse

.form__input
  width 250px
  height 30px
  z-index 2
  background transparent

.form__label
  transform translate(10px, 25px)
  transition all 0.6s ease-in-out
  z-index 1

.form__input:focus + .form__label
  transform translate(10px, 0px)
  transition all 0.6s ease-in-out
